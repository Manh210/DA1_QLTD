@model VD.Models.TinUngTuyen
@{
    ViewBag.Title = "Đăng tin ứng tuyển mới";
    Layout = "~/Views/Shared/_MainPage.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Wavefire Coding</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/styles/style.css">
    @*<style>
            /* Your custom CSS styles here */

            .box-container {
                margin-left: 400px; /* Căn lề trái */
                margin-right: 400px; /* Căn lề phải */
                padding-top: 200px;
            }
        </style>*@
    <style>

        body {
            background: linear-gradient(to right, #6a11cb82, #2575fc);
            font-family: Arial, sans-serif;
        }

        .main-wrap {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .box-container {
            background-color: #fff;
            padding: 30px;
            margin-top: 200px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
        }

            .box-container h2 {
                font-size: 1.75rem;
                margin-bottom: 20px;
                color: #333;
                text-align: center;
            }

        .form-group label {
            font-weight: 600;
        }

        .form-control {
            border-radius: 5px;
        }

        .btn-primary, .btn-danger {
            border-radius: 5px;
            padding: 10px;
            font-size: 1rem;
            width: 100%;
            transition: background-color 0.3s ease;
        }

        .btn-primary {
            background-color: #5a67d8;
            border: none;
        }

            .btn-primary:hover {
                background-color: #434190;
            }

        .btn-danger {
            background-color: #e53e3e;
            border: none;
            margin-top: 10px;
        }

            .btn-danger:hover {
                background-color: #c53030;
            }
    </style>
</head>

<!-- Main content -->
<body>
    <div class="main-wrap">
        <div class="box-container ">
            <h2 class="text-center mb-4">@ViewBag.Title</h2>
            @using (Html.BeginForm("Add_TUT", "TinUngTuyen", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="HoTen">Họ và tên</label>
                    <input type="text" class="form-control" id="HoTen" name="HoTen" placeholder="Họ và tên" required>
                </div>
                <div class="form-group">
                    <label for="SDT">Số điện thoại</label>
                    <input type="text" class="form-control" id="SDT" name="SDT" placeholder="Số điện thoại" required>
                </div>
                <div class="form-group">
                    <label for="DOB">Ngày tháng năm sinh</label>
                    <input type="date" class="form-control" id="DOB" name="DOB" required>
                </div>
                <div class="form-group">
                    <label for="GioiTinh">Giới tính:</label>
                    <select class="form-control" id="GioiTinh" name="GioiTinh" required>
                        <option value="">Chọn giới tính</option>
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="email" class="form-control" id="Email" name="Email" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <label for="PhucLoi">Phúc lợi</label>
                    <input type="text" class="form-control" id="PhucLoi" name="PhucLoi" placeholder="Phúc lợi">
                </div>
                <div class="form-group">
                    <label for="MucLuong">Mức lương</label>
                    <input type="text" class="form-control" id="MucLuong" name="MucLuong" placeholder="Mức lương">
                </div>
                <div class="form-group">
                    <label for="CapBac">Cấp bậc</label>
                    <input type="text" class="form-control" id="CapBac" name="CapBac" placeholder="Cấp bậc">
                </div>
                <div class="form-group">
                    <label for="KinhNghiemLV">Kinh nghiệm làm việc</label>
                    <input type="text" class="form-control" id="KinhNghiemLV" name="KinhNghiemLV" placeholder="Kinh nghiệm làm việc">
                </div>
                <div class="form-group">
                    <label for="TrinhDoHocVan">Trình độ học vấn</label>
                    <input type="text" class="form-control" id="TrinhDoHocVan" name="TrinhDoHocVan" placeholder="Trình độ học vấn">
                </div>
                <div class="form-group">
                    <label for="KyNangChuyenMon">Kỹ năng chuyên môn</label>
                    <input type="text" class="form-control" id="KyNangChuyenMon" name="KyNangChuyenMon" placeholder="Kỹ năng chuyên môn">
                </div>
                <div class="form-group">
                    <label for="ID_LV">Lĩnh vực</label>
                    <select class="form-control" id="ID_LV" name="ID_LV" required>
                        <option value="">Chọn Lĩnh vực</option>
                        @foreach (var lv in ViewBag.LinhVucs)
                        {
                            <option value="@lv.ID_LV">@lv.TenLV</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="ID_NN">Ngành nghề</label>
                    <select class="form-control" id="ID_NN" name="ID_NN" required>
                        <option value="">Chọn địa điểm</option>
                        @foreach (var nn in ViewBag.NganhNghes)
                        {
                            <option value="@nn.ID_NN">@nn.TenNN</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="ID_DD">Địa điểm</label>
                    <select class="form-control" id="ID_DD" name="ID_DD" required>
                        <option value="">Chọn ngành nghề</option>
                        @foreach (var dd in ViewBag.DiaDiems)
                        {
                            <option value="@dd.ID_DD">@dd.TenDD</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Thêm mới</button>
                    @{ var taiKhoan = Session["TaiKhoan"] as VD.Models.TaiKhoan;}
                    <a href="/TinUngTuyen/Index_TUT/@taiKhoan.ID_TK" class="btn btn-danger btn-block">Quay lại</a>
                </div>
            }
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
<!-- /.content -->
</html>
