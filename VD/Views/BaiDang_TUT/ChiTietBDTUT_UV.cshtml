<style>

    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        font-family: 'Arial', sans-serif;
        color: #333;
    }

    .content-header {
        background: transparent;
        color: white;
        padding: 20px 0;
        margin-bottom: 30px;
    }

        .content-header h1 {
            font-size: 2.5rem;
            font-weight: bold;
        }

    .card {
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        background: white;
        padding: 20px;
        margin-top: 200px;
    }

    .news_section_container {
        margin-top: 20px;
    }

    .title-news {
        font-size: 1.5rem;
        border-bottom: 2px solid #6a11cb;
        padding: 10px 0;
        margin-bottom: 20px;
        font-weight: bold;
    }

    .btn-primary {
        background-color: #6a11cb;
        border-color: #6a11cb;
        transition: background-color 0.3s, border-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #2575fc;
            border-color: #2575fc;
        }

    .table th, .table td {
        vertical-align: middle;
    }

    .table th {
        background-color: #f8f9fa;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(106, 17, 203, 0.1);
    }

    .input-group {
        max-width: 500px;
        margin: 0 auto 20px;
    }

        .input-group .form-control {
            border-radius: 0.375rem 0 0 0.375rem;
        }

        .input-group .input-group-append .btn {
            border-radius: 0 0.375rem 0.375rem 0;
        }

    .table td:last-child .btn {
        margin-right: 5px;
    }
</style>
@Html.HiddenFor(model => model.ID_TUT)
    <div class="container news_section_container">
        <div class="card">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="title-news">@ViewBag.Title</h1>
                </div>
            </div>
            <div class="row row-item-new">
                <div class="col-md-9">
                    <div class="content-box">
                        <h3><a>Chi tiết</a></h3>
                        <div class="description-box">
                            Họ và tên: @Model.HoTen
                        </div>
                        <div class="description-box">
                            Số điện thoại: @Model.SDT
                        </div>
                        <div class="description-box">
                            Ngày sinh: @Model.DOB.ToShortDateString()
                        </div>
                        <div class="description-box">
                            Giới tính: @Model.GioiTinh
                        </div>
                        <div class="description-box">
                            Email: @Model.Email
                        </div>
                        <div class="description-box">
                            Địa điểm: @Model.DiaDiem.TenDD
                        </div>
                        <div class="description-box">
                            Ngành nghề: @Model.NganhNghe.TenNN
                        </div>
                        <div class="description-box">
                            Lĩnh vực: @Model.LinhVuc.TenLV
                        </div>
                        <div class="description-box">
                            Phúc lợi: @Model.PhucLoi
                        </div>
                        <div class="description-box">
                            Mức lương: @Model.MucLuong
                        </div>
                        <div class="description-box">
                            Cấp bậc: @Model.CapBac
                        </div>
                        <div class="description-box">
                            Kinh nghiệm làm việc: @Model.KinhNghiemLV
                        </div>
                        <div class="description-box">
                            Trình độ học vấn: @Model.TrinhDoHocVan
                        </div>
                        <div class="description-box">
                            Kỹ năng chuyên môn: @Model.KyNangChuyenMon
                        </div>
                    </div>
                    <div class="form-group">
                        <a href="/BaiDang_TUT/Index_BDTUT_UV" class="btn btn-danger btn-defaul">Quay lại</a>
                    </div>
                </div>
            </div>
        </div>
</div>
