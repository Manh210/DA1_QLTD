@model VD.Models.UngTuyen
@{
    ViewBag.Title = "Chi tiết công việc";
    Layout = "~/Views/Shared/_MainPage.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thông tin công việc | Wavefire Coding</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/styles/style.css">
    @*<style>
            /* Your custom CSS styles here */

            .box-container {
                margin-left: 400px; /* Căn lề trái */
                margin-right: 400px; /* Căn lề phải */
                padding-top: 200px;
            }
        </style>*@
    <style>

        body {
            background: linear-gradient(to right, #6a11cb82, #2575fc);
            font-family: Arial, sans-serif;
        }

        .main-wrap {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .box-container {
            background-color: #fff;
            padding: 30px;
            margin-top: 200px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
        }

            .box-container h2 {
                font-size: 1.75rem;
                margin-bottom: 20px;
                color: #333;
                text-align: center;
            }

        .form-group label {
            font-weight: 600;
        }

        .form-control {
            border-radius: 5px;
        }

        .btn-primary, .btn-danger {
            border-radius: 5px;
            padding: 10px;
            font-size: 1rem;
            width: 100%;
            transition: background-color 0.3s ease;
        }

        .btn-primary {
            background-color: #5a67d8;
            border: none;
        }

            .btn-primary:hover {
                background-color: #434190;
            }

        .btn-danger {
            background-color: #e53e3e;
            border: none;
            margin-top: 10px;
        }

            .btn-danger:hover {
                background-color: #c53030;
            }
    </style>
</head>

<!-- Main content -->
<body>
    <div class="main-wrap">
        <div class="box-container ">
            <h2 class="text-center mb-4">Thông tin công việc</h2>
            <div class="form-group">
                <label for="TenCV">Tên công việc</label>
                <input type="text" class="form-control" id="TenCV" name="TenCV" value="@Model.CongViec.TenCV">
            </div>
            <div class="form-group">
                <label for="MoTaCV">Mô tả</label>
                <input type="text" class="form-control" id="MoTaCV" name="MoTaCV" value="@Model.CongViec.MoTaCV">
            </div>
            <div class="form-group">
                <label for="LoaiViec">Loại việc</label>
                <input type="text" class="form-control" id="LoaiViec" name="LoaiViec" value="@Model.CongViec.LoaiViec">
            </div>
            <div class="form-group">
                <label for="ID_NN">Ngành nghề</label>
                <input type="text" class="form-control" id="ID_NN" name="ID_NN" value="@Model.CongViec.NganhNghe.TenNN">
            </div>
            <div class="form-group">
                <label for="ID_LV">Lĩnh vực</label>
                <input type="text" class="form-control" id="ID_LV" name="ID_LV" value="@Model.CongViec.LinhVuc.TenLV">
            </div>
            <div class="form-group">
                <label for="ID_DD">Địa điểm</label>
                <input type="text" class="form-control" id="ID_DD" name="ID_DD" value="@Model.CongViec.DiaDiem.TenDD">
            </div>
            @{ var taiKhoan = Session["TaiKhoan"] as VD.Models.TaiKhoan;}
            <div class="form-group">
                <a href="/QLCV_UV/ListCV/@taiKhoan.ID_TK" class="btn btn-primary btn-block">Quay lại</a>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
<!-- /.content -->
</html>

