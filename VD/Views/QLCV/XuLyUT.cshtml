@model VD.Models.UngTuyen
@{
    ViewBag.Title = "Xử lý ứng tuyển";
    Layout = "~/Views/Shared/_MainPageNTD.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Wavefire Coding</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/styles/style.css">
    @*<style>
            /* Your custom CSS styles here */

            .box-container {
                margin-left: 400px; /* Căn lề trái */
                margin-right: 400px; /* Căn lề phải */
                padding-top: 200px;
            }
        </style>*@
    <style>

        body {
            background: linear-gradient(to right, #6a11cb82, #2575fc);
            font-family: Arial, sans-serif;
        }

        .main-wrap {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .box-container {
            background-color: #fff;
            padding: 30px;
            margin-top: 200px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
        }

            .box-container h2 {
                font-size: 1.75rem;
                margin-bottom: 20px;
                color: #333;
                text-align: center;
            }

        .form-group label {
            font-weight: 600;
        }

        .form-control {
            border-radius: 5px;
        }

        .btn-primary, .btn-danger {
            border-radius: 5px;
            padding: 10px;
            font-size: 1rem;
            width: 100%;
            transition: background-color 0.3s ease;
        }

        .btn-primary {
            background-color: #5a67d8;
            border: none;
        }

            .btn-primary:hover {
                background-color: #434190;
            }

        .btn-danger {
            background-color: #e53e3e;
            border: none;
            margin-top: 10px;
        }

            .btn-danger:hover {
                background-color: #c53030;
            }
    </style>
</head>

<!-- Main content -->
<body>
    <div class="main-wrap">
        <div class="box-container ">
            <h2 class="text-center mb-4">@ViewBag.Title</h2>
            @using (Html.BeginForm("XuLyUT", "QLCV", FormMethod.Post))
            {
                @Html.HiddenFor(model => model.ID_UT)
                @Html.Hidden("iD_UV", Model.ID_UV)
                <div class="form-group">
                    <label for="TenCV">Tên công việc:</label>
                    <input type="text" class="form-control" id="TenCV" name="TenCV" value="@Model.CongViec.TenCV" required>
                </div>
                <div class="form-group">
                    <label for="HoTen">Họ và tên:</label>
                    <input type="text" class="form-control" id="HoTen" name="HoTen" value="@Model.UngVien.HoTen" required>
                </div>
                <div class="form-group">
                    <label for="DOB">Ngày tháng năm sinh:</label>
                    <input type="text" class="form-control" id="DOB" name="DOB" value="@Model.UngVien.DOB" required>
                </div>
                <div class="form-group">
                    <label for="GioiTinh">Giới tính:</label>
                    <input type="text" class="form-control" id="GioiTinh" name="GioiTinh" value="@Model.UngVien.GioiTinh" required>
                </div>
                <div class="form-group">
                    <label for="SDT">Số điện thoại:</label>
                    <input type="tel" class="form-control" id="SDT" name="SDT" value="@Model.UngVien.SDT" required>
                </div>
                <div class="form-group">
                    <label for="Email">Email:</label>
                    <input type="email" class="form-control" id="Email" name="Email" value="@Model.UngVien.Email" required>
                </div>
                <div class="form-group">
                    <label for="cv">CV:</label>
                    <input type="text" class="form-control-file" id="cv" name="cv" value="@Model.UngVien.CV">
                </div>
                <div class="form-group">
                    <label for="syll">Sơ yếu lý lịch:</label>
                    <input type="text" class="form-control-file" id="syll" name="syll" value="@Model.UngVien.SYLL">
                </div>
                <div class="form-group">
                    <label for="ID_DD">Địa điểm:</label>
                    <input type="text" class="form-control-file" id="ID_DD" name="ID_DD" value="@Model.UngVien.DiaDiem.TenDD">
                </div>
                <div class="form-group">
                    <label for="TrangThaiUT">Trạng thái ứng tuyển:</label>
                    <select class="form-control" id="TrangThaiUT" name="TrangThaiUT" required>
                        <option value="@Model.TrangThaiUT">@Model.TrangThaiUT</option>
                        <option value="Phê duyệt">Phê duyệt</option>
                        <option value="Từ chối">Từ chối</option>
                    </select>
                </div>
                <div class="form-group">
                    @Html.Hidden("iD_CV", Model.ID_CV)
                    <button type="submit" class="btn btn-primary btn-block">Cập nhật</button>
                    <a href="/QlCV/ListUT/@Model.CongViec.ID_CV" class="btn btn-danger btn-block">Quay lại</a>
                </div>
            }
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
<!-- /.content -->
</html>

